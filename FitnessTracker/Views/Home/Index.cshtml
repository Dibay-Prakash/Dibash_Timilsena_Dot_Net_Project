@{
    ViewData["Title"] = "Fitness Tracker - Home Page";
}

<div class="welcome-container text-center" style="background-color: #f0f8ff; padding: 40px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-top: 50px;">
    <h1 class="display-4" style="font-family: 'Arial', sans-serif; color: #28a745;">Welcome to Fitness Tracker</h1>
    <p style="font-size: 18px; font-weight: 500; color: #333;">Track your fitness journey, set goals, and stay motivated. Achieve your health goals with ease!</p>
</div>

<div class="container mt-5">
    <div class="row">
        <!-- Fitness Block 1: Nutrition -->
        <div class="col-md-3 mb-4">
            <div class="fitness-block" style="background-color: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h3 style="color: #28a745;">Nutrition</h3>
                <p style="color: #555;">Fuel your body with the right nutrients. Discover personalized meal plans to boost your performance and energy levels.</p>
            </div>
        </div>

        <!-- Fitness Block 2: Workout Plans -->
        <div class="col-md-3 mb-4">
            <div class="fitness-block" style="background-color: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h3 style="color: #28a745;">Workout Plans</h3>
                <p style="color: #555;">Get customized workout plans to meet your fitness goals. Whether you want to build strength or increase endurance, we have it covered.</p>
            </div>
        </div>

        <!-- Fitness Block 3: Progress Tracking -->
        <div class="col-md-3 mb-4">
            <div class="fitness-block" style="background-color: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h3 style="color: #28a745;">Progress Tracking</h3>
                <p style="color: #555;">Track your progress with easy-to-use charts and graphs. See your improvements and set new milestones to stay motivated.</p>
            </div>
        </div>

        <!-- Fitness Block 4: Motivation -->
        <div class="col-md-3 mb-4">
            <div class="fitness-block" style="background-color: #f8f9fa; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                <h3 style="color: #28a745;">Motivation</h3>
                <p style="color: #555;">Stay motivated with daily tips, challenges, and encouragement. Fitness is a journey, and we’re here to help you along the way.</p>
            </div>
        </div>
    </div>
</div>
