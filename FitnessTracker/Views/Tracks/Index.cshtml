@{
    ViewData["Title"] = "Weight Status Guide";
    var weightStatusMessages = new Dictionary<string, string>
    {
        { "Overweight", "Focus on nutrient-dense, lower-calorie foods with adequate protein intake." },
        { "Normal Weight", "Balanced diet with appropriate macronutrient distribution." },
        { "Underweight", "Focus on higher protein and calories to promote healthy weight gain." }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .card {
            border-radius: 12px;
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: scale(1.02);
        }
        .card-header {
            font-weight: bold;
            font-size: 1.2rem;
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Weight Status Guide</h1>

        @foreach (var status in weightStatusMessages)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header">
                    @status.Key
                </div>
                <div class="card-body">
                    <p class="card-text">@status.Value</p>
                </div>
            </div>
        }

        </div>
   

</body>
</html>
